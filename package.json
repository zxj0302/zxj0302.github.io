{
  "scripts": {
    "build:css": "npm run build:tailwind && npm run build:tailwind:compat",
    "build:tailwind": "tailwindcss -c tailwind.config.js -i ./assets/tailwind/input.css -o ./assets/css/tailwind.css --minify",
    "build:tailwind:compat": "tailwindcss -c tailwind.config.js -i ./assets/tailwind/bootstrap-compat.input.css -o ./assets/css/bootstrap-compat.css --minify",
    "build:tailwind:watch": "tailwindcss -c tailwind.config.js -i ./assets/tailwind/input.css -o ./assets/css/tailwind.css --watch",
    "lint:prettier": "prettier . --check"
  },
  "devDependencies": {
    "@shopify/prettier-plugin-liquid": "^1.10.0",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.3",
    "prettier": "^3.8.0",
    "tailwindcss": "^3.4.17"
  }
}
